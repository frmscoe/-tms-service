{
  "name": "tms-service",
  "version": "0.0.2",
  "description": "Node.js (TypeScript) HTTP Service for TMS FRM",
  "types": "build/index.d.ts",
  "keywords": [
    "mojaloop",
    "frm"
  ],
  "contributors": [
    {
      "name": "Joey Goksu",
      "email": "me@joeygoksu.com"
    },
    {
      "name": "Theophilus Okwugwuni",
      "email": "theophilusdev@gmail.com"
    },
    {
      "name": "Jean-Pierre Nell"
    }
  ],
  "license": "ISC",
  "scripts": {
    "build": "tsc --project tsconfig.json && npm run copy-files",
    "start": "node -r dotenv/config build/server",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "dev:debug": "ts-node-dev --transpile-only --respawn --inspect=4321 --project tsconfig.json ./src/server.ts",
    "copy-files": "copyfiles mojaloop-api.yaml build/",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:eslint": "eslint --fix \"**/*.ts\"",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"**/*.ts\"",
    "lint:prettier": "prettier --check \"**/*.ts\"",
    "test": "jest --config=jest.config.ts --passWithNoTests",
    "test:watch": "jest --config=jest.config.ts --watch",
    "test:unit": "npm run test ./src",
    "test:integration": "npm run test ./src --detectOpenHandles"
  },
  "dependencies": {
    "@frmscoe/frms-coe-lib": "^0.1.27",
    "@frmscoe/frms-coe-startup-lib": "^0.0.10",
    "@log4js-node/logstash-http": "^1.1.0",
    "@types/axios": "^0.14.0",
    "@types/koa": "^2.13.3",
    "@types/koa-bodyparser": "^4.3.1",
    "@types/koa-router": "^7.4.2",
    "arangojs": "^7.5.0",
    "axios": "^0.21.4",
    "dotenv": "^16.0.3",
    "elastic-apm-node": "^3.15.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "koa2-swagger-ui": "^5.7.0",
    "log4js": "^6.4.0",
    "redis": "^3.1.2",
    "supertest": "^6.1.3",
    "swagger2": "^3.0.0",
    "swagger2-koa": "^4.0.0"
  },
  "devDependencies": {
    "@types/arangodb": "^3.5.17",
    "@types/copyfiles": "^2.4.1",
    "@types/dotenv": "^8.2.0",
    "@types/elastic-apm-node": "^2.7.0",
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.5.2",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/prettier": "^2.4.0",
    "@types/redis": "^2.8.29",
    "@types/rimraf": "^3.0.2",
    "@types/shelljs": "^0.8.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "copyfiles": "^2.4.1",
    "dtslint": "^4.1.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "8.0.3",
    "jest": "^29.6.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^1.1.6",
    "typedoc": "^0.23.16",
    "typescript": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
